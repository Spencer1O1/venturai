{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "dev": { "cache": false },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "build/**"]
    },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$", "**/*.{ts,tsx,js,jsx,json}"]
    },
    "format": {
      "inputs": ["$TURBO_DEFAULT$", "**/*.{ts,tsx,js,jsx,json}"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"]
    }
  },
  "globalDependencies": [".env.*"]
}
